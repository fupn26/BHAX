<?xml version="1.0" encoding="UTF-8"?>
<xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform" version='1.0'>

<xsl:param name="latex.hyperparam">colorlinks,linkcolor=red,citecolor=green,urlcolor=cyan,pdfstartview=FitBH</xsl:param> 
<xsl:param name="glossterm.auto.link">1</xsl:param>
<xsl:param name="doc.publisher.show">1</xsl:param>
<xsl:param name="doc.lot.show">figure,table,example</xsl:param>
<xsl:param name="figure.note">warning</xsl:param>
<xsl:param name="figure.tip">warning</xsl:param>
<xsl:param name="draft.mode">yes</xsl:param>
<xsl:param name="latex.babel.language">magyar</xsl:param>
<xsl:param name="latex.class.options">12pt</xsl:param>
<xsl:param name="doc.collab.show">2</xsl:param>
<xsl:param name="highlight.source" select="1"/>

<xsl:template match="emphasis[@role='red']">
        <xsl:param name="content">
            <xsl:apply-templates/>
        </xsl:param>
        <xsl:text>{\color{red}</xsl:text>
        <xsl:copy-of select="$content"/>
        <xsl:text>}</xsl:text>
</xsl:template>

<xsl:template match="emphasis[@role='blue']">
        <xsl:param name="content">
            <xsl:apply-templates/>
        </xsl:param>
        <xsl:text>{\color{blue}</xsl:text>
        <xsl:copy-of select="$content"/>
        <xsl:text>}</xsl:text>
</xsl:template>



<xsl:template match="emphasis[@role='green']">
        <xsl:param name="content">
            <xsl:apply-templates/>
        </xsl:param>
        <xsl:text>{\color{cadmiumgreen}</xsl:text> <!--add extra color: add to xcolor.sty \definecolor{colorname}{RGB}{R,G,B}
        <xsl:copy-of select="$content"/>
        <xsl:text>}</xsl:text>
</xsl:template>
      
</xsl:stylesheet>